<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'book_comment', books: @books, user: @user %>
      <%= render 'search_form', user: @user, search_book: @search_book %>

      <h3>投稿数の前日比・前週比</h3>
      <%= render 'book_count', books: @books, user: @user %>
      <h3>7日間分の投稿数</h3>
      <%= render 'book_index' %>
    </div>
  </div>
</div>


