      <table>
        <% book.book_comments.each do |book_comment| %>
        <tr>
         <td><%= link_to(book_comment.user) do %>
               <%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br><%= book_comment.user.name %></td>
             <% end %>
         <td><%= book_comment.comment %></td>
         <% if book_comment.user == current_user %>
         <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
         <!--上記にremote: trueを追加-->
         </td>
         <% end %>
        </tr>
        <% end %>
      </table>